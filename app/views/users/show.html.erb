<div class="row">
  <div class="col-md-4">
    <h1>Welcome <%= @user.name %> </h1>
  </div>
  <div class="col-md-8">
    <% if @user.events.any? %>
      <h2>Events</h2>
      <ol>
        <% @user.events.each do |event| %>
          <li>
            <span>Event: <%= event.desc %></span><br>
            <span>Date: <%= event.date %></span><br>
          </li>
        <% end %>
      </ol>
    <% end %>
    <% if @user.attendances.any? %>
      <h2>Attended Events</h2>
      <ol>
        <% @previous_events.each do |prev| %>
          <li>
            <span>Event: <%= prev.desc %></span><br>
            <span>Date: <%= prev.date %></span><br>
          </li>
        <% end %>
      </ol>
      <h2>Future Events</h2>
      <ol>
        <% @upcoming_events.each do |coming| %>
          <li>
            <span>Event: <%= coming.desc %></span><br>
            <span>Date: <%= coming.date %></span><br>
          </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>
